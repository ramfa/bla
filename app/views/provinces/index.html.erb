<p id="notice"><%= notice %></p>

<h1>Listado de Provincias</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to 'Provincia', provinces_path(order: "name")%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @provinces.each do |province| %>
      <tr>
        <td><%= province.name %></td>
        <td><%= link_to 'Ver', province %></td>
        <td><%= link_to 'Editar', edit_province_path(province) %></td>
        <td><%= link_to 'Eliminar', province, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Provincia', new_province_path %>
<%= link_to 'Volver', entries_path %>
