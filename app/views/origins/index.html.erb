<h1>Listado de Donadores</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to 'Donador', origins_path(order: 'colector') %></th>
      <th>Dirección</th>
      <th>Alimentación del Animal</th>
      <th>Metodo de Captura</th>
      <th>Caracteristicas Distintivas</th>
      <th>Provincia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @origins.each do |origin| %>
      <tr>
        <td><%= origin.colector %></td>
        <td><%= origin.address %></td>
        <td><%= origin.feeding %></td>
        <td><%= origin.capmethod %></td>
        <td><%= origin.features %></td>
        <td><% if origin.province %>
        <%= origin.province.name %>
        <% end %></td>
        
        <td><%= link_to 'Ver', origin %></td>
        <td><%= link_to 'Editar', edit_origin_path(origin) %></td>
        <td><%= link_to 'Eliminar', origin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

