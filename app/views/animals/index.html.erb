<p id="notice"><%= notice %></p>

<h1>Listado de Animales</h1>

<table>
  <thead>
    <tr>
      
      <th>Nombre</th>
      <th>Nombre Vulgar</th>
      <th>Peso</th>
      <th>Número Etiqueta</th>
      <th>Microchip</th>
      <th>Día de Captura</th>
      <th>Edad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
      
        <td><%= animal.name %></td>
        <td><% if animal.commonname %>
        <%= animal.commonname.name %>
        <% end %></td>
        <td><%= animal.weight %></td>
        <td><%= animal.numbertag %></td>
        <td><%= animal.microchip %></td>
        <td><%= animal.capturedate %></td>
        <td><%= animal.age %></td>
        
        <td><%= link_to 'Ver', animal %></td>
        <td><%= link_to 'Editar', edit_animal_path(animal) %></td>
        <td><%= link_to 'Eliminar', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

