<p id="notice"><%= notice %></p>

<h1>Listado de Historias Clinicas</h1>
<%= link_to 'Agregar Tratamiento', new_history_path %> |
<%= link_to 'Ver Tratamiento', tratamientos_path %> |
<table>
  <thead>
    <tr>
      <th><%= link_to 'Animal', animals_path(order: "name") %></th>
      <th>Tratamiento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><% if history.animal %>
        <%= history.animal.name %>
        <% end %></td>
        <td><% if history.tratamiento %>
        <%= history.tratamiento.signos_clinicos%>
        <% end %></td>
        <td><%= link_to 'Show', history %></td>
        <td><%= link_to 'Edit', edit_history_path(history) %></td>
        <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


