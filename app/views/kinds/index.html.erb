<p id="notice"><%= notice %></p>

<h1>Listado de Especie</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to "Nombre", kinds_path(order: "name")%> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kinds.each do |kind| %>
      <tr>
        <td><%= kind.name %></td>
        <td><%= link_to 'Ver', kind %></td>
        <td><%= link_to 'Editar', edit_kind_path(kind) %></td>
        <td><%= link_to 'Eliminar', kind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

